<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.Contact_us"
    android:orientation="vertical"
    android:background="@color/main_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/toolbar_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gamesBackImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/back"
                android:layout_gravity="center"
                app:tint="@color/toolbar_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textColor="@color/toolbar_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium_500"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"/>

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="212dp"
                    android:layout_height="96dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/crazy_matka_splash_logo"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="32dp">


                    <RelativeLayout
                        android:id="@+id/constraintLayout13"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:background="@drawable/call_us_backgrond">

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:background="#9E6C2E"
                            android:padding="16dp"
                            android:src="@drawable/updated_call_us"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Us"
                            android:layout_toEndOf="@id/iv_call"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="14sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_medium_500"/>

                        <TextView
                            android:id="@+id/callDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_call"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_below="@id/tv_call"
                            android:textSize="18sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_semi_bold_600"/>

                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/linearLayout10"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/chat_on_background">

                        <ImageView
                            android:id="@+id/iv_wha"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:background="#9E6C2E"
                            android:padding="16dp"
                            android:src="@drawable/updated_whatsapp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/iv_wha"
                            android:text="Chat Now"
                            android:layout_marginTop="16dp"
                            android:textSize="14sp"
                            android:textColor="@color/toolbar_text"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium_500"/>

                        <TextView
                            android:id="@+id/whatsAppDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:text=""
                            android:layout_toEndOf="@id/iv_wha"
                            android:layout_below="@id/tv_chat"
                            android:textSize="18sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_semi_bold_600"/>


                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/constraintLayout12"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/email_background">

                        <ImageView
                            android:id="@+id/iv_email"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:background="#9E6C2E"
                            android:padding="16dp"
                            android:src="@drawable/updated_email"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_toEndOf="@+id/iv_email"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/toolbar_text"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/poppins_medium_500"/>

                        <TextView
                            android:id="@+id/emailDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toEndOf="@+id/iv_email"
                            android:layout_below="@id/tv_email"
                            android:textSize="18sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_semi_bold_600"/>

                    </RelativeLayout>









                    <RelativeLayout
                        android:id="@+id/telegramLayout"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/chat_us_background">

                        <ImageView
                            android:id="@+id/iv_chat_us"
                            android:layout_width="82dp"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            android:background="#9E6C2E"
                            android:src="@drawable/updated_chat_us"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_chat_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat Us"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_chat_us"
                            android:textSize="14sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_medium_500"/>

                        <TextView
                            android:id="@+id/telegramDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/iv_chat_us"
                            android:layout_below="@id/tv_chat_us"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="18sp"
                            android:textColor="@color/toolbar_text"
                            android:fontFamily="@font/poppins_semi_bold_600"/>


                    </RelativeLayout>





















                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>