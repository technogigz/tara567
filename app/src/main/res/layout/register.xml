    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Register">

    <include layout="@layout/progress_bar_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:fontFamily="@font/poppins_extr_bold_800"
        android:text="SIGN UP"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/user_profile"
        app:layout_constraintBottom_toBottomOf="@id/signUpTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/signUpTitle" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mTxt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        android:textSize="@dimen/_9ssp"
        android:layout_marginTop="-11dp"
        android:textColor="@color/hint_text"
        android:fontFamily="@font/poppins_semi_bold_600"
        app:layout_constraintStart_toStartOf="@id/signUpTitle"
        app:layout_constraintTop_toBottomOf="@+id/signUpTitle"/>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mFullNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_39sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/enter_edit_text_shpe"
        app:layout_constraintTop_toBottomOf="@+id/mTxt_title">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mFullName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:elevation="@dimen/_3sdp"
            android:hint="Full Name"
            android:fontFamily="@font/poppins_medium_500"
            android:inputType="text"
            android:maxLength="100"
            android:textSize="@dimen/_9ssp"
            android:paddingVertical="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:paddingStart="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mEnter_Image_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mEnter_Image_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/user_grey_profile"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mUserNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/enter_edit_text_shpe"
        app:layout_constraintTop_toBottomOf="@+id/mFullNameLayout">

